<h4>Raio</h4>
<% if !current_user %>
    <input style="margin-left: 20px; width: 50%;" type="range" value="1" min="0.5" max="20" step="0.5" name="slider_raio" onchange="setSquare(this.value)"  oninput="display.value=slider_raio.value" id="slider_raio" />
    Km: <output id="display" style="color: black; width: 10%; margin: 0px;" name="display" for="slider_raio">1</output><br />
<% else %>
    <% if current_user.configuration.blank? %>
        <input style="margin-left: 20px; width: 50%;" type="range" value="1" min="0.5" max="20" step="0.5" name="slider_raio" onchange="setSquare(this.value)"  oninput="display.value=slider_raio.value" id="slider_raio" />
        Km: <output id="display" style="color: black; width: 10%; margin: 0px;" name="display" for="slider_raio">1</output><br />
    <% else %>
        <% if current_user.configuration.square.blank? %>
            <input style="margin-left: 20px; width: 50%;" type="range" value="1" min="0.5" max="20" step="0.5" name="slider_raio" onchange="setSquare(this.value)"  oninput="display.value=slider_raio.value" id="slider_raio" />
            Km: <output id="display" style="color: black; width: 10%; margin: 0px;" name="display" for="slider_raio">1</output><br />
        <% else %>
            <input style="margin-left: 20px; width: 50%;" type="range" value=<%= current_user.configuration.square %> min="0.5" max="20" step="0.5" name="slider_raio" onchange="setSquare(this.value)"  oninput="display.value=slider_raio.value" id="slider_raio" />
            Km: <output id="display" style="color: black; width: 10%; margin: 0px;" name="display" for="slider_raio"><%= current_user.configuration.square %></output><br />
        <% end %>
    <% end %>
<% end %>