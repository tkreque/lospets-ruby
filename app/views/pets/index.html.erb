<% provide(:title, "Pet") %>
<div class="petList">
  <h1>Pets</h1>

  <% @pets.each do |pet| %>
    <div class="pet">
      <div class="petName"><%= pet.name %></div>
      <div class="petWrapper">
        <div class="petImage"><%= image_tag(pet.image, class:"pet_image_small") %></div>
        <div class="petDescriptor">
          
          <div class="petBreed">
            <span>Raça:</span>
            <%= pet.breed['name'] %>
          </div>
          
          <div class="petStatus">
            <span>Status:</span>
            <%= pet.status['name'] %>
            </div>
            
          <div class="petAddress">
            <span>Endereço:</span>
            <%= pet.address['address'] %>
          </div>
          
          <div class="petOwner">
            <span> Usuário/Tutor:</span>
            <% if pet.user.present? %>
            <%= pet.user['name'] %>
            <% else %>
            Usuário inexistente!
            <% end %>
          </div>
          
          <div class="petCharacteristics">
            <span>Características</span>
            <% pet.tag.each do |tag| %>
              <%= tag.name %>
            <% end %>
          </div>
          
        </div>        
        <div class="petActions"><%= link_to 'Ver Detalhes', pet %></div>  
      </div>
      
    </div>
  <% end %>
</div>
